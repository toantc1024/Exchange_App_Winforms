<UserControl
    x:Class="Exchange_App.View.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Exchange_App.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <materialDesign:Card>
        <TabControl Style="{StaticResource MaterialDesignFilledTabControl}" TabStripPlacement="Left">
            <TabItem Header="Products">
                <ContentControl Content="{Binding ProductManagerContent}" />
            </TabItem>
            <TabItem Header="Orders">
                <TextBlock Margin="8" Text="Left placement" />
            </TabItem>
            <TabItem Header="Statistic">
                <TextBlock Margin="8" Text="Tab 3 with different width" />
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</UserControl>
