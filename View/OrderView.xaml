<UserControl
    x:Class="Exchange_App.View.OrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Exchange_App.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Exchange_App.CustomUserControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid Background="DarkOrange">
                <StackPanel
                    Grid.Row="0"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Kind="AppBadge" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="My Orders" />
                    <TextBlock />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Panel.ZIndex="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="31*" />
                            <ColumnDefinition Width="743*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Command="{Binding OnSearchCommand}"
                            CommandParameter="{Binding ElementName=searchBar}"
                            Style="{StaticResource MaterialDesignToolButton}">
                            <materialDesign:PackIcon
                                Width="18"
                                Height="16"
                                VerticalAlignment="Center"
                                Kind="Search"
                                Opacity=".56" />
                        </Button>

                        <TextBox
                            x:Name="searchBar"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            MinWidth="200"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Find order"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0">
                            <TextBox.InputBindings>
                                <KeyBinding
                                    Key="Return"
                                    Command="{Binding OnSearchCommand}"
                                    CommandParameter="{Binding ElementName=searchBar}" />


                            </TextBox.InputBindings>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding OnSearchCommand}" CommandParameter="{Binding ElementName=searchBar}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </Grid>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button>Click</Button>
                    </StackPanel>

                </Grid>

                <ScrollViewer Grid.Row="2" Background="White">
                    <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding Orders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    x:Name="Border"
                                    Padding="8"
                                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="0,0,0,1"
                                    Cursor="Hand">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:OrderView}}, Path=DataContext.ShowOrderDetailsCommand}" CommandParameter="{Binding}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Margin="8,0,0,0">

                                            <TextBlock FontWeight="Bold" Text="{Binding OrderName}" />
                                            <TextBlock Text="{Binding OrderDate}" />
                                            <TextBlock Text="{Binding ShowTotal}" />
                                        </StackPanel>



                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>

            <Grid
                Grid.Row="1"
                Panel.ZIndex="9999"
                Background="White"
                Visibility="{Binding IsShowOrderDetail}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Background="White" Orientation="Horizontal">
                    <Button
                        Width="20"
                        Height="20"
                        Margin="5"
                        Padding="0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="50"
                        materialDesign:ElevationAssist.Elevation="Dp0"
                        Background="DarkOrange"
                        BorderThickness="0"
                        Command="{Binding HideOrderDetail}">

                        <materialDesign:PackIcon
                            Width="15"
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Kind="ArrowLeft" />
                    </Button>
                    <Separator Width="5" Visibility="Hidden" />
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock>Order</TextBlock>
                        <Separator Width="5" Visibility="Hidden" />

                        <TextBlock Text="{Binding CurrentOrder.OrderName}" />
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid>
                        <TextBlock Text="{Binding CurrentOrder.ShowTotal}" />
                    </Grid>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
